# This makefile was generated by autochaos 0.2.0. Please do not
# tamper with it unless you are very certain about what you are doing.

ALL_ARGUMENTS = --install-prefix /mnt/chaos 

PREFIX = /mnt/chaos
PACKAGE = modplay

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wsign-compare \
-Wmissing-declarations -Wmissing-noreturns -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./modplay.o \
./modfile.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_log.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_console.a \
$(STATIC_LIBRARY_PATH)/library_sound.a \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_system.a \
$(STATIC_LIBRARY_PATH)/library_memory.a 

OBJECTS =  \
modplay.o \
modfile.o


SOURCES =  \
modplay.c \
modfile.asm

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source

all: splash makefile modplay

clean: makefile
	rm -f modplay
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling program: modplay...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

modplay: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	mkdir -p $(PREFIX)/programs/modplay
	cp modplay $(PREFIX)/programs/modplay/modplay
	strip -R .note -R .comment -R .eh_frame $(PREFIX)/programs/modplay/modplay
	$(GZIP) $(PREFIX)/programs/modplay/modplay # > $(PREFIX)/programs/modplay/modplay.gz

package-source:
	mkdir -p /home/plundis/Projects/chaos/programs/modplay/package-source/.
	-cp -f autochaos.rules changelog configure README AUTHORS TODO INSTALL /home/plundis/Projects/chaos/programs/modplay/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /home/plundis/Projects/chaos/programs/modplay/package-source/.
	for source in $(SOURCES) ; do cp $$source /home/plundis/Projects/chaos/programs/modplay/package-source/. ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf modplay-0.0.1
	mv package-source modplay-0.0.1
	tar cvIf modplay-0.0.1.tar.bz2 modplay-0.0.1
	     
-include modplay.dep
-include modfile.dep

